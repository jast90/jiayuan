<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.github.jast90.user.mapper.UserHouseMapper">

    <resultMap id="BaseResultMap" type="io.github.jast90.user.entity.UserHouse">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from user_house
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="io.github.jast90.user.entity.UserHouse">
        insert into user_house(user_id,house_id,join_time,phone)
        values(#{userId},#{houseId},#{joinTime},#{phone})
    </insert>

    <update id="updateByPrimaryKey" parameterType="io.github.jast90.user.entity.UserHouse">
        update user_house
        set user_id=#{userId},house_id=#{houseId},join_time=#{joinTime},phone=#{phone}
        where id = #{id}
    </update>

    <select id="selectByPrimaryKey" resultType="io.github.jast90.user.entity.UserHouse" parameterType="java.lang.Long">
        select id, create_time, update_time, user_id,house_id,join_time,phone
        from user_house
        where id = #{id}
    </select>

    <select id="selectAll" resultType="io.github.jast90.user.entity.UserHouse">
        select id, create_time, update_time, user_id,house_id,join_time,phone
        from user_house
    </select>

    <select id="selectListByCondition" resultType="io.github.jast90.user.entity.UserHouse">
        select id, create_time, update_time, user_id,house_id,join_time,phone
        from user_house
        <where>
            <if test="userId>0">
                user_id = #{userId}
            </if>
        </where>
    </select>

    <select id="selectPage" resultType="io.github.jast90.user.entity.UserHouse">
        select a.id, a.create_time, a.update_time, a.user_id,a.house_id,a.join_time,a.phone,b.`real_name` as userName
        from user_house a
        left join user b on a.user_id=b.id
        <where>
            <if test="condition.search!=null">
                (b.real_name like concat(#{condition.search},"%")
                or a.phone like concat(#{condition.search},"%"))
            </if>
        </where>
        order by a.id desc
    </select>
</mapper>