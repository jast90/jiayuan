<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.github.jast90.user.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="io.github.jast90.user.entity.User">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from user
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="io.github.jast90.user.entity.User">
        insert into user(username,password,user_type,real_name,age)
        values(#{username},#{password},#{userType},#{realName},#{age})
    </insert>

    <update id="updateByPrimaryKey" parameterType="io.github.jast90.user.entity.User">
        update user
        set real_name=#{realName},age=#{age}
        where id = #{id}
    </update>

    <update id="updatePassword">
        update user
        set password=#{password}
        where id=#{id}
    </update>

    <select id="selectByPrimaryKey" resultType="io.github.jast90.user.entity.User" parameterType="java.lang.Long">
        select id, create_time, update_time, username,password,user_type,real_name,age
        from user
        where id = #{id}
    </select>

    <select id="selectAll" resultType="io.github.jast90.user.entity.User">
        select id, create_time, update_time, username,password,user_type,real_name,age
        from user
    </select>

    <select id="selectListByCondition" resultType="io.github.jast90.user.entity.User">
        select a.id, a.create_time, a.update_time, a.username,a.password,a.user_type,a.real_name,a.age
        from user a
        <if test="unJoin">
            left join user_house b on a.id = b.user_id
        </if>
        <where>
            <if test="unJoin">
                and b.id is null
            </if>
            <if test="userIds!=null and userIds.size()>0">
                and id in
                <foreach collection="userIds" item="userId" separator="," open="(" close=")">
                    #{userId}
                </foreach>
            </if>
            <if test="userType>0">
                and user_type=#{userType}
            </if>
        </where>
    </select>

    <select id="selectPage" resultType="io.github.jast90.user.entity.User">
        select id, create_time, update_time, username,password,user_type,real_name,age
        from user
        <where>
            <if test="condition.search!=null">
                (username like concat(#{condition.search},"%")
                or real_name like concat(#{condition.search},"%"))
            </if>
        </where>
        order by id desc
    </select>

    <select id="selectByUsername" resultType="io.github.jast90.user.entity.User">
        select id,username,password,user_type,real_name,age
        from user
        where username=#{username}
    </select>
</mapper>