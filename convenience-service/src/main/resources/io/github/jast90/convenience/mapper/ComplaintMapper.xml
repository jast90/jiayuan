<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.github.jast90.convenience.mapper.ComplaintMapper">

    <resultMap id="BaseResultMap" type="io.github.jast90.convenience.entity.Complaint">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from complaint
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="io.github.jast90.convenience.entity.Complaint">
        insert into complaint(content,create_user_id,phone,post_date)
        values(#{content},#{createUserId},#{phone},#{postDate})
    </insert>

    <update id="updateByPrimaryKey" parameterType="io.github.jast90.convenience.entity.Complaint">
        update complaint
        set content=#{content},create_user_id=#{createUserId},phone=#{phone},post_date=#{postDate}
        where id = #{id}
    </update>

    <select id="selectByPrimaryKey" resultType="io.github.jast90.convenience.entity.Complaint"
            parameterType="java.lang.Long">
        select id, create_time, update_time, content,create_user_id,phone,post_date
        from complaint
        where id = #{id}
    </select>

    <select id="selectAll" resultType="io.github.jast90.convenience.entity.Complaint">
        select id, create_time, update_time, content,create_user_id,phone,post_date
        from complaint
    </select>

    <select id="selectPage" resultType="io.github.jast90.convenience.entity.Complaint">
        select id, create_time, update_time, content,create_user_id,phone,post_date
        from complaint
        <where>
            <if test="condition.search!=null">
                (content like concat(#{condition.search},"%")
                or phone like concat(#{condition.search},"%"))
            </if>
            <if test="condition.createUserId>0">
               and create_user_id=#{condition.createUserId}
            </if>
        </where>
        order by id desc
    </select>
</mapper>