<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.github.jast90.resource.mapper.HouseMapper">

    <resultMap id="BaseResultMap" type="io.github.jast90.resource.entity.House">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from house
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="io.github.jast90.resource.entity.House">
        insert into house(building_no,house_no,house_type,remark)
        values(#{buildingNo},#{houseNo},#{houseType},#{remark})
    </insert>

    <update id="updateByPrimaryKey" parameterType="io.github.jast90.resource.entity.House">
        update house
        set building_no=#{buildingNo},house_no=#{houseNo},house_type=#{houseType},remark=#{remark}
        where id = #{id}
    </update>

    <update id="updateStatusToJoined" parameterType="io.github.jast90.resource.entity.House">
        update house
        set status=2
        where id = #{id}
    </update>

    <select id="selectByPrimaryKey" resultType="io.github.jast90.resource.entity.House" parameterType="java.lang.Long">
        select id, create_time, update_time, building_no,house_no,house_type,remark,status
        from house
        where id = #{id}
    </select>

    <select id="selectAll" resultType="io.github.jast90.resource.entity.House">
        select id, create_time, update_time, building_no,house_no,house_type,remark,status
        from house
    </select>

    <select id="selectListByCondition" resultType="io.github.jast90.resource.entity.House">
        select id, create_time, update_time, building_no,house_no,house_type,remark,status
        from house
        <where>
            <if test="houseIds!=null and houseIds.size()>0">
                id in
                <foreach collection="houseIds" item="houseId" open="(" close=")" separator=",">
                    #{houseId}
                </foreach>
            </if>
            <if test="status>0">
                status=#{status}
            </if>
        </where>
    </select>

    <select id="selectPage" resultType="io.github.jast90.resource.entity.House">
        select id, create_time, update_time, building_no,house_no,house_type,remark,status
        from house
        <where>
            <if test="condition.search!=null">
                (building_no like concat(#{condition.search},"%")
                or house_no like concat(#{condition.search},"%")
                or house_type like concat(#{condition.search},"%")
                or remark like concat(#{condition.search},"%"))
            </if>
        </where>
        order by id desc
    </select>
</mapper>